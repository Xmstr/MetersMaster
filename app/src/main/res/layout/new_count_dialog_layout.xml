<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:id="@+id/textView_prevCountLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Последнее показание:"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/textView_prevCountContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/textView_prevCountLabel"
        android:text="00055"
        android:textColor="@color/primary_text"
        android:textSize="22sp" />



    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout_new_count"
        android:layout_below="@+id/textView_prevCountLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:layout_marginTop="10dp"
        app:errorEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/editText_new_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Новое показание"
            android:maxLength="5"
            android:textSize="22sp" />
    </android.support.design.widget.TextInputLayout>

</RelativeLayout>